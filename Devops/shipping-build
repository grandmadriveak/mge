# See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

# This stage is used when running from VS in fast mode (Default for Debug configuration)
FROM mcr.microsoft.com/dotnet/aspnet:8.0-alpine AS base
USER $APP_UID
WORKDIR /app

# This stage is used to build the service project
FROM mcr.microsoft.com/dotnet/sdk:8.0-alpine AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Microservices/Shipping/Shipping.API/Shipping.API.csproj", "Microservices/Shipping/Shipping.API/"]
COPY ["Common/Common.RestApi/Common.RestApi.csproj", "Common/Common.RestApi/"]
COPY ["Common/Common.Audit/Common.Audit.csproj", "Common/Common.Audit/"]
COPY ["Common/Common.CoreEntity/Common.CoreEntity.csproj", "Common/Common.CoreEntity/"]
COPY ["Common/Common.EventBus/Common.EventBus.csproj", "Common/Common.EventBus/"]
COPY ["Microservices/Shipping/Shipping.Infrastructure/Shipping.Infrastructure.csproj", "Microservices/Shipping/Shipping.Infrastructure/"]
COPY ["Microservices/Shipping/Shipping.Services/Shipping.Services.csproj", "Microservices/Shipping/Shipping.Services/"]
RUN dotnet restore "./Microservices/Shipping/Shipping.API/Shipping.API.csproj"
COPY . .
WORKDIR "/src/Microservices/Shipping/Shipping.API"
RUN dotnet build "./Shipping.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

# This stage is used to publish the service project to be copied to the final stage
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Shipping.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# This stage is used in production or when running from VS in regular mode (Default when not using the Debug configuration)
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Shipping.API.dll"]